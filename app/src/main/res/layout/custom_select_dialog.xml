<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_5sp">

    <EditText
        android:id="@+id/edt_spn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchview_bg"
        android:hint="Search Currency"
        android:padding="@dimen/_5sp"
        android:textSize="@dimen/_13sp" />

    <TextView
        android:id="@+id/txt_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sp"
        android:layout_marginBottom="@dimen/_50sp"
        android:gravity="center"
        android:textSize="@dimen/_13sp"
        android:visibility="gone"
        android:text="Please Wait..." />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:fontFamily="@font/raleway_bold">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sp"
        android:visibility="visible" />
</LinearLayout>