<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="@dimen/_20sp"
    app:cardCornerRadius="@dimen/_10sp"
    android:layout_margin="@dimen/_10sp"
    android:padding="@dimen/_10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sp"
            android:paddingRight="@dimen/_10sp"
            android:paddingTop="@dimen/_5sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <TextView
                        android:id="@+id/txtCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_size_18"
                        android:layout_gravity="bottom">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="1.2">

                    <ImageView
                        android:layout_width="@dimen/_30sp"
                        android:layout_height="@dimen/_30sp"
                        android:src="@drawable/ic_calendar"
                        android:layout_gravity="center"
                        android:tint="@color/black">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="05 Jan, 2021"
                            android:textSize="@dimen/_12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/raleway_regular"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="03:00 PM"
                            android:textSize="@dimen/_12sp"
                            android:textColor="@color/dark_black"
                            android:fontFamily="@font/raleway_regular"
                            >

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_10sp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/service_name"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/_14sp">

                        </TextView>

                        <TextView
                            android:id="@+id/txtServiceName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logo Design"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enquiry_source"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/_14sp">

                        </TextView>

                        <TextView
                            android:id="@+id/txtEnquirySource"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Linkedin"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sp"
                        android:paddingBottom="@dimen/_5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Importance"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/_14sp">

                        </TextView>

                        <TextView
                            android:id="@+id/txtImportance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/urgent"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:textColor="@color/white"
                            android:background="@drawable/rounded_corner_button_extra_radius"
                            android:layout_marginLeft="@dimen/_20sp"
                            android:paddingLeft="@dimen/_20sp"
                            android:paddingRight="@dimen/_20sp"
                            android:paddingTop="@dimen/_2sp"
                            android:paddingBottom="@dimen/_2sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:backgroundTint="@color/red"
                            android:textSize="@dimen/_12sp">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right|bottom"
                    android:paddingBottom="@dimen/_5sp"
                    android:layout_weight="1.2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAddFollowUp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sp"
                        app:cardBackgroundColor="@color/light_black"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="@dimen/_10sp"
                            android:paddingLeft="@dimen/_10sp">

                            <ImageView
                                android:id="@+id/imgPlus"
                                android:layout_width="@dimen/_10sp"
                                android:layout_height="@dimen/_10sp"
                                android:src="@drawable/ic_plus"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_follow_up"
                                android:layout_gravity="center"
                                android:layout_toRightOf="@id/imgPlus"
                                android:layout_marginLeft="@dimen/_5sp"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/_12sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/raleway_semi_bold"
                                android:gravity="center">

                            </TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>