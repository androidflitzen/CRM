<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_20sp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardToady"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sp"
                android:layout_marginTop="@dimen/_15sp"
                app:cardBackgroundColor="@color/light_black"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10sp"
                app:cardElevation="@dimen/_10sp"
                app:cardCornerRadius="@dimen/_5sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtToday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today's \nFollow Ups"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_10sp"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_marginLeft="@dimen/_10sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25sp"
                        android:layout_above="@id/txtToday"
                        android:layout_marginBottom="@dimen/_20sp"
                        android:fontFamily="@font/raleway_extra_bold"
                        android:layout_marginLeft="@dimen/_10sp">

                    </TextView>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMissed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sp"
                android:layout_marginTop="@dimen/_15sp"
                app:cardBackgroundColor="@color/light_black"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sp"
                android:layout_alignParentRight="true"
                app:cardElevation="@dimen/_10sp"
                app:cardCornerRadius="@dimen/_5sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtMissed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Missed \nFollow Ups"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_10sp"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_marginLeft="@dimen/_10sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="07"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25sp"
                        android:layout_above="@id/txtMissed"
                        android:layout_marginBottom="@dimen/_20sp"
                        android:fontFamily="@font/raleway_extra_bold"
                        android:layout_marginLeft="@dimen/_10sp">

                    </TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@id/lin1"
            android:layout_marginTop="@dimen/_10sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardUpComing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sp"
                android:layout_marginTop="@dimen/_15sp"
                app:cardBackgroundColor="@color/light_black"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10sp"
                app:cardElevation="@dimen/_10sp"
                app:cardCornerRadius="@dimen/_5sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtUpComing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upcoming \nFollow Ups"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_10sp"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_marginLeft="@dimen/_10sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="03"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25sp"
                        android:layout_above="@id/txtUpComing"
                        android:layout_marginBottom="@dimen/_20sp"
                        android:fontFamily="@font/raleway_extra_bold"
                        android:layout_marginLeft="@dimen/_10sp">

                    </TextView>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTotalOrder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sp"
                android:layout_marginTop="@dimen/_15sp"
                app:cardBackgroundColor="@color/light_black"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sp"
                android:layout_alignParentRight="true"
                app:cardElevation="@dimen/_10sp"
                app:cardCornerRadius="@dimen/_5sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtTotalOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total \nOrders"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_10sp"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_marginLeft="@dimen/_10sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25sp"
                        android:layout_above="@id/txtTotalOrder"
                        android:layout_marginBottom="@dimen/_20sp"
                        android:fontFamily="@font/raleway_extra_bold"
                        android:layout_marginLeft="@dimen/_10sp">

                    </TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_crm_logo"
            android:layout_marginBottom="@dimen/_5sp">

        </ImageView>

    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>